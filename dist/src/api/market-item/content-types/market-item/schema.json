{
    "kind": "collectionType",
    "collectionName": "market_items",
    "info": {
        "singularName": "market-item",
        "pluralName": "market-items",
        "displayName": "Market Item"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {
        "i18n": {
            "localized": true
        }
    },
    "attributes": {
        "title": {
            "type": "string",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "required": true
        },
        "photo": {
            "type": "media",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "multiple": false,
            "allowedTypes": [
                "images",
                "files",
                "videos",
                "audios"
            ]
        },
        "price": {
            "type": "decimal",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "required": true
        },
        "vendor_name": {
            "type": "string",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "vendor_contact_whatsapp": {
            "type": "string",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "vendor_instagram": {
            "type": "string",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "description": {
            "type": "text",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "available_from": {
            "type": "date",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "available_to": {
            "type": "date",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            }
        },
        "visible": {
            "type": "boolean",
            "pluginOptions": {
                "i18n": {
                    "localized": true
                }
            },
            "default": true
        }
    }
}
